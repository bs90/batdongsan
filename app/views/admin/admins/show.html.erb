<section id="admins-show">
  <h1 class="page-title"><%= t ".title", name: @admin.name %></h1>
  <div class="actions">
    <%= link_to t(".edit"), edit_admin_admin_path(@admin), class: :btn %>
    <%= link_to t(".back"), admin_admins_path, class: :btn %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t ".requirement" %></th>
        <th><%= t ".field" %></th>
        <th><%= t ".value" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= requirement_label @admin, :name %></td>
        <td><%= Admin.h :name %></td>
        <td><%= @admin.name %></td>
      </tr>
      <tr>
        <td><%= requirement_label @admin, :email %></td>
        <td><%= Admin.h :email %></td>
        <td><%= @admin.email %></td>
      </tr>
      <tr>
        <td><%= requirement_label @admin, :disabled %></td>
        <td><%= Admin.h :disabled %></td>
        <td><%= @admin.disabled ? t(".disabled_true") : t(".disabled_false") %></td>
      </tr>
      <tr>
        <td><%= requirement_label @admin, :m_prefecture_ids %></td>
        <td><%= Admin.h :m_prefecture_ids %></td>
        <td><%= @admin.m_prefectures.map(&:name).join(", ") %></td>
      </tr>
      <tr>
        <td><%= requirement_label @admin, :organization_id %></td>
        <td><%= Admin.h :organization_id %></td>
        <td><%= @admin.organization.name %></td>
      </tr>
      <tr>
        <td><%= requirement_label @admin, :permission_level %></td>
        <td><%= Admin.h :permission_level %></td>
        <td><%= @admin.permission_level_label %></td>
      </tr>
      <tr>
    </tbody>
  </table>
</section>
